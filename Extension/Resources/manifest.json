{
  "manifest_version": 3,
  "name": "Kagi Redirect",
  "description": "Redirects the Safari search engine to Kagi",
  "version": "1.0",
  "permissions": [
    "storage",
    "declarativeNetRequestWithHostAccess",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.duckduckgo.com/*",
    "*://*.kagi.com/*"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
